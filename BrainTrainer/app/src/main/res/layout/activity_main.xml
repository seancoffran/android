<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titeText"
        android:layout_width="301dp"
        android:layout_height="78dp"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:text="Brain Trainer"
        android:textSize="60sp"
        app:fontFamily="@font/bangers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="161dp"
        android:layout_height="152dp"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="125dp"
        android:layout_marginRight="125dp"
        android:gravity="center"
        android:onClick="onClickGo"
        android:text="GO!"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/problemText" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="89dp"
        android:layout_height="61dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:gravity="center"
        android:background="#CDDC39"
        android:text="59s"
        android:textSize="45sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/problemText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titeText" />

    <TextView
        android:id="@+id/problemText"
        android:layout_width="111dp"
        android:layout_height="42dp"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="#FFEB3B"
        android:gravity="center"
        android:text="1 + 2"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/scoreText"
        app:layout_constraintStart_toEndOf="@+id/timerText"
        app:layout_constraintTop_toBottomOf="@+id/titeText" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="89dp"
        android:layout_height="61dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="#03A9F4"
        android:gravity="center"
        android:text="0/0"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/problemText"
        app:layout_constraintTop_toBottomOf="@+id/titeText" />

    <TextView
        android:id="@+id/answerBox1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:background="#009688"
        android:gravity="center"
        android:onClick="checkAnswer"
        android:tag="1"
        android:text=""
        android:textSize="100sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/answerBox3"
        app:layout_constraintEnd_toStartOf="@+id/answerBox2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerText"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/answerBox2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:background="#03A9F4"
        android:gravity="center"
        android:onClick="checkAnswer"
        android:tag="2"
        android:text=""
        android:textSize="100sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/answerBox4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/goButton"
        app:layout_constraintTop_toBottomOf="@+id/scoreText"
        app:layout_constraintVertical_bias="0.982" />

    <TextView
        android:id="@+id/answerBox3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginBottom="187dp"
        android:background="#FFEB3B"
        android:gravity="center"
        android:onClick="checkAnswer"
        android:tag="3"
        android:text=""
        android:textSize="100sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/answerBox4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goButton" />

    <TextView
        android:id="@+id/answerBox4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginBottom="187dp"
        android:background="#FF9800"
        android:gravity="center"
        android:onClick="checkAnswer"
        android:tag="4"
        android:text=""
        android:textSize="100sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/answerBox3"
        app:layout_constraintTop_toBottomOf="@+id/goButton" />

</androidx.constraintlayout.widget.ConstraintLayout>